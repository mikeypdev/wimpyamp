<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Disable app sandboxing for development/testing purposes -->
    <!-- Note: For App Store distribution, proper sandboxing entitlements are required -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Allow loading of arbitrary files for skin support -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- File access for audio files -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Audio input/output permissions -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- Accessibility permissions for proper UI interaction -->
    <key>com.apple.security.personal-information.calendars</key>
    <false/>
    <key>com.apple.security.personal-information.contacts</key>
    <false/>
</dict>
</plist>